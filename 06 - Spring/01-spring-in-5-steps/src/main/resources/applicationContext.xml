<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.5.xsd">

  <!-- Component Scan -->
  <!-- This will scan all beans inside this base-package, regardless if it is using annotation or xml configuration. -->
  <context:component-scan base-package="com.in28minutes.spring.basics" />

  <!-- Loading the bean -->
  <bean id="xmlJdbcConnection" class="com.in28minutes.spring.basics.springin5steps.xml.XmlJdbcConnection">
  </bean>

  <bean id="xmlPersonDAO" class="com.in28minutes.spring.basics.springin5steps.xml.XmlPersonDAO">
  	<!-- Autowiring xmlJdbcConnection bean to xmlPersonDAO bean. The ref attribute defines it. -->
	<!-- The property name defines to which variable this dependency will be injected to. So, make sure the property name matches the variable name in xmlPersonDao bean. -->
    <property name="xmlJdbcConnection" ref="xmlJdbcConnection" />
  </bean>

  <!-- more bean definitions go here -->

</beans>